{
  "extends": [
    "config:base",
    "schedule:monthly",
    "group:allNonMajor",
    "group:gatsbyMonorepo",
    "group:linters",
    "group:babelMonorepo",
    "docker:disable"
  ],
  "rebaseWhen": "conflicted",
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "groupName": "Font Awesome",
      "matchPackagePatterns": [
        "@fortawesome/*",
        "@styled-icons/*"
      ]
    }
  ],
  "ignoreDeps": [
    "node"
  ]
}
